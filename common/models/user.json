{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "forceId": false,
  "restrictResetPasswordTokenScope": true,
  "emailVerificationRequired": false,
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuid"
    },
    "isLoggedIn": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "isWatching": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "channels": {
      "type": "hasMany",
      "model": "channel",
      "foreignKey": "channelId",
      "through": "subscriber"
    },
    "profiles": {
      "type": "hasOne",
      "model": "profile",
      "foreignKey": "userId"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "AccessToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
